<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuMenghitung">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagejudul"
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/gbrhitung" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/judulhitung"
                android:layout_width="143dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal|top"
                android:text="Berhitung"
                android:textAppearance="@style/judul_menu" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtPengenalanAngka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengenalan Angka"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="210dp"
            android:textAppearance="@style/menu_font"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="357dp"
        android:layout_height="470dp"
        android:layout_marginTop="288dp"
        app:cardBackgroundColor="@color/cardcolor1"
        app:cardCornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">


            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_column="1"
                app:layout_row="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="90dp"
                    tools:layout_editor_absoluteY="231dp">


                    <ImageView
                        android:id="@+id/gbrangka2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_column="0"
                        app:layout_row="0"
                        app:srcCompat="@drawable/gbr7"
                        tools:layout_editor_absoluteX="271dp"
                        tools:layout_editor_absoluteY="653dp" />

                    <TextView
                        android:id="@+id/txtMenuAngka2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Level 2"
                        android:textAlignment="center"
                        android:textAppearance="@style/menu_font"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_column="1"
                app:layout_row="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:cardCornerRadius="10dp"
                    tools:layout_editor_absoluteX="90dp"
                    tools:layout_editor_absoluteY="231dp">


                    <ImageView
                        android:id="@+id/gbrangka4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_column="0"
                        app:layout_row="0"
                        app:srcCompat="@drawable/gbr7"
                        tools:layout_editor_absoluteX="271dp"
                        tools:layout_editor_absoluteY="653dp" />

                    <TextView
                        android:id="@+id/txtMenuAngka4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Level 4"
                        android:textAlignment="center"
                        android:textAppearance="@style/menu_font"></TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="10dp"
                app:layout_column="0"
                app:layout_row="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="90dp"
                    tools:layout_editor_absoluteY="231dp">


                    <ImageView
                        android:id="@+id/gbrangka1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_column="0"
                        app:layout_row="0"
                        app:srcCompat="@drawable/gbr7"
                        tools:layout_editor_absoluteX="271dp"
                        tools:layout_editor_absoluteY="653dp" />

                    <TextView
                        android:id="@+id/txtMenuAngka1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Level 1"
                        android:textAlignment="center"
                        android:textAppearance="@style/menu_font"></TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_column="0"
                app:layout_row="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="90dp"
                    tools:layout_editor_absoluteY="231dp">


                    <ImageView
                        android:id="@+id/gbrangka3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_column="0"
                        app:layout_row="1"
                        app:srcCompat="@drawable/gbr7"
                        tools:layout_editor_absoluteX="271dp"
                        tools:layout_editor_absoluteY="653dp" />

                    <TextView
                        android:id="@+id/txtMenuAngka3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Level 3"
                        android:textAlignment="center"
                        android:textAppearance="@style/menu_font"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_column="0"
                app:layout_row="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="90dp"
                    tools:layout_editor_absoluteY="231dp">


                    <ImageView
                        android:id="@+id/gbrangka5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_column="0"
                        app:layout_row="0"
                        app:srcCompat="@drawable/gbr7"
                        tools:layout_editor_absoluteX="271dp"
                        tools:layout_editor_absoluteY="653dp" />

                    <TextView
                        android:id="@+id/txtMenuAngka5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="Level 5"
                        android:textAlignment="center"
                        android:textAppearance="@style/menu_font"></TextView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.gridlayout.widget.GridLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>